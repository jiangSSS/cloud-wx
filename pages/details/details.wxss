/* pages/details/details.wxss */
.book-hander{
  padding: 20rpx 20rpx 40rpx 20rpx;
  border-bottom: 8rpx solid #e9e9e9;

}
.book-hander .box-top{
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #444
}
.box-top .title{
  font-size: 14px;
  font-weight: 700;
  color: #333;
}
.box-top .img{
  width: 220rpx;
  height: 280rpx;
}
.box-top .main-msg{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.box-bottom{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.box-bottom .btn{
  color: #333;
  margin: 0;
  width: 300rpx;
  font-size: 12px;
  background: #e9e9e9;
  border: 1px solid #e9e9e9;
}
/**************** */
.book-decs{
  padding: 30rpx 20rpx;
  border-bottom: 2px solid #e9e9e9;
  font-size: 12px;
  line-height: 1.5
  
}
.book-desc .title{
  font-weight: 700;
  font-size: 15px;
}
.book-desc .desc-main{
  margin-top: 50rpx;
  font-size: 12px;
  color: #333;
}
/*  ********** */
.book-catelog {
  padding: 0rpx 20rpx;
  line-height: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;

}
.book-catelog .catelog-l{
  width: 300rpx;
  display: flex;
  justify-content: space-between;

    } 
/*************  */
.show-catelog{

  display: flex;
  justify-content: space-between;

}

.show-catelog .catelog-l .title{
  font-size: 15px;
  font-weight: 700;
  color: #333;
}
.catelogs{
  font-size: 12px;
  color: #444;

}
.update-time{
  font-size: 12px;
  color: #444;
}
.read-btn{
  margin: 10rpx 10rpx;
  padding: 5rpx 40rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: skyblue;
  
}